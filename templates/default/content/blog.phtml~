		<h4>Created on: <?=$p->getDateCreatedAt();?></h4>
		<div class='text'>
		<?=$p->text;?>
		</div>
		
	<p><a href='<?=$p->getPostPath();?>'><?=$p->getNumComments(); echo ($p->getNumComments() == 1?" Comment":" Comments");?> </a></p>
	</div>
<?php

}


?>

<div class='prev'><? echo $this->getPrevPage(); ?></div>

